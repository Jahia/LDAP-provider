<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xsi:schemaLocation="http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans-3.0.xsd">

    <bean id="JahiaLDAPConfigFactory" class="org.jahia.services.usermanager.ldap.JahiaLDAPConfigFactory" />

    <bean id="JahiaLDAPConfigRegistry" class="org.jahia.modules.osgi.JahiaModuleConfigRegistry"
            init-method="start" destroy-method="stop">
        <property name="managedServiceFactory" ref="JahiaLDAPConfigFactory" />
    </bean>

    <bean id="JahiaUserManagerLDAPProvider" class="org.jahia.services.usermanager.ldap.JahiaUserManagerLDAPProvider"
          parent="JahiaUserManagerProvider" scope="prototype">
        <property name="postponePropertiesInit" value="true" />
    </bean>

    <bean id="JahiaGroupManagerLDAPProvider" class="org.jahia.services.usermanager.ldap.JahiaGroupManagerLDAPProvider"
          parent="JahiaGroupManagerProvider" scope="prototype">
        <property name="postponePropertiesInit" value="true" />
    </bean>

</beans>